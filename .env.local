// Browser-side Google Translate (v2) helper.
// Requires: .env.local -> VITE_GT_KEY=35513ad5512d4483640f3c2f5cd31029620c94cc	
// Note: For production, proxy this on a server to avoid exposing the key.
export async function translateToFa(text, { source = 'it' } = {}) {
  try {
    const key = import.meta.env.VITE_GT_KEY
    if (!key || !text) return null
    const url = `https://translation.googleapis.com/language/translate/v2?key=${encodeURIComponent(key)}`
    const body = {
      q: text,
      target: 'fa',
      source,
      format: 'text'
    }
    const res = await fetch(url, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(body),
    })
    if (!res.ok) return null
    const data = await res.json()
    const tr = data?.data?.translations?.[0]?.translatedText
    return tr || null
  } catch {
    return null
  }
}